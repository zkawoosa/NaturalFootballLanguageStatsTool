# nfl-query environment variables
#
# Data source config (switch source/endpoint settings without code changes)
NFL_SOURCE=balldontlie
BL_API_BASE_URL=https://api.balldontlie.io/nfl/v1
BL_API_KEY=

# Networking and source timeouts (ms)
BL_FETCH_TIMEOUT_MS=15000
BL_REQUEST_TIMEOUT_MS=12000
BL_REQUEST_RETRIES=2

# Rate limiting / polling behavior for scripts
BL_REQUESTS_PER_MINUTE=5
BL_RATE_LIMIT_MIN_BACKOFF_MS=1000
BL_RATE_LIMIT_MAX_BACKOFF_MS=60000
BL_RATE_LIMIT_BASE_BACKOFF_MS=12000

# Logging controls
NFL_LOG_TO_FILE=0
NFL_QUERY_TEST_QUIET_LOGS=0

# Cache policy (used by future caching layer)
NFL_CACHE_ENABLED=1
NFL_CACHE_TTL_SECONDS=300
